{
  "name": "ssprove-devcontainer",
  "image": "ghcr.io/xtruder/nix-devcontainer:v1",
  "runArgs": [
    "--security-opt", "label=disable"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "nixEnvSelector.nixFile": "${workspaceFolder}/shell.nix"
      },
      "extensions": [
        "arrterian.nix-env-selector",
        "ejgallego.coq-lsp"
      ]
    }
  }
}
