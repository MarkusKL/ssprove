{
  "name": "ssprove-devcontainer",
  "build": { "dockerfile": "../Dockerfile" },
  "onCreateCommand": "nix-shell --command 'echo done building nix dev environment'",

  "customizations": {
    "vscode": {
      "settings": {
        "nixEnvSelector.nixFile": "${workspaceFolder}/shell.nix"
      },
      "extensions": [
        "arrterian.nix-env-selector",
        "ejgallego.coq-lsp"
      ]
    }
  }
}
